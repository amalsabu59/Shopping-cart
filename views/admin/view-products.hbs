<section>
    <div class="container">
        <div class="row">
        <a href="/admin/add-products" class="btn btn-primary ml-auto">Add</a>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">name</th>
      <th scope="col">title</th>
      <th scope="col">catagory</th>
      <th scope="col">description</th>
      <th scope="col">image</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">#</th>
      <td>{{this.name}}</td>
      <td>{{this.title}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
    
      <td><img style="width: 50px;height: 50px;" src="/public/product-images/{{this._id}}.jpg " alt="image"></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>

</div>
    </div>

</section>