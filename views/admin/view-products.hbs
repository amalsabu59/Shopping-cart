<section>
  <div class="container">
    <div class="row mt-4">


      <a href="/admin/add-products" class="btn btn-primary ml-auto mb-5 mr-3">Add</a>
      </div>
      <table class="table mt-5" id="productstable">
        <thead>
          <tr>
            <th scope="col">no</th>
            <th scope="col">name</th>
            <th scope="col">catagory</th>
            <th scope="col">description</th>
            <th scope="col">price</th>
            <th scope="col">image</th>
            <th>#</th>
            <th>options</th>

          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">#</th>
            <td>{{this.name}}</td>

            <td>{{this.category}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.price}}</td>

            <td><img style="width: 50px;height: 50px; " src="/product-images/{{this._id}}.jpg" alt="image"></td>
            <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit </a>
            </td>
            <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete {{this.name}}?')">Delete </a>
            </td>

          </tr>
          {{/each}}

        </tbody>
      </table>

    </div>
  </div>


</section>
<script>
  $(document).ready( function () {
    $('#productstable').DataTable();
} );
</script>
