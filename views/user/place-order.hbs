<section>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="form-group">
                <label for="">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="">
                <label for="">Pincode</label>
                <input type="text" class="form-control" id="pincode" name="pincode" placeholder="">
                <label for="">Mobile</label>
                <input type="text" class="form-control"  id="mobile" name="mobile"placeholder="">
                <input type="text" name="userId" id="" value="{{user._id}}" hidden>
            </div>
            <div class="md-4">
                <div class="container mt-5 ml-4">
                    <h5>
                        Total Amount is :Rs.{{total}}
                    </h5>
                    <hr>
                    <div class="payment">
                        <p>Payment Method</p>
                        <div class="container">
                            <input class="form-check-input" type="radio" name="payment-method" value="COD" checked>
                            <label class="form-check-label" for="flexRadioDefault1">
                                Cash On Delevery(COD)
                            </label>
                       <hr>
                        
                            <input class="form-check-input" type="radio" name="payment-method" value="ONLINE"
                                checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Online Method
                            </label>
                  <hr>
                  <button class="btn btn-success" type="submit" >Checkout</button>
                  </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>

<script>
    $("#checkout-form").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/place-order',
            method:'post',
            data:$('#checkout-form').serialize(),
            success:(response)=>{
                alert(response)
                if(response.status){
                    location.href='/order-success'
                }
            }
        })
    })
</script>